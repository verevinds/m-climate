{
  "extends": "./tsconfig.server.json",
  "exclude": [
    ".k8s",
    "dist",
    ".next",
    "docker",
    ".vscode",
    "next.config.js",
    "node_modules",
    "package-lock.json",
    "package.json",
    "_static"
  ],
  "include": [
    ".env.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "compilerOptions": {
      "module": "esnext",
      "isolatedModules": true
  }
}
